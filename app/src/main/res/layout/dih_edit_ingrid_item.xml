<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dish_add_ingrid_name_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dish_add_ingrid_quant_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dish_add_ingrid_quant_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dish_add_checkbox"
        app:layout_constraintStart_toEndOf="@id/dish_add_ingrid_name_item"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dish_add_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dish_add_ingrid_quant_item"
        android:text="ok" />


</androidx.constraintlayout.widget.ConstraintLayout>